mixin header()
  +b.HEADER.header&attributes(attributes)
    +burger.__burger.is-hidden-xl.js-menu-open
    +e.wrapper
      +logo.__logo
      +e.A.close.is-hidden-sm.js-close-feedback(href="#")
        +icon('cross').__cross
      +header-phone.__phone.is-hidden-sm(href="tel:88004444448") 8 (800) 444-44-48
    block

